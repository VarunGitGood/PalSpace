generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid      Int       @id @default(autoincrement())
  username String    @unique
  email    String    @unique
  password String
  peerID   String?    @unique
  groupID  String?    @unique
  joinedAt DateTime? @default(now())
}

